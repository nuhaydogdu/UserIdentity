@model UserIdentity.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />

@Html.ValidationSummary()


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    //eğer kullanıcı Login sayfasına ReturnUrl ile gelirse kullanıcı giriş yaptıktan sonra ReturnUrl adresine gitmesini sağlamak için
    //exp: Authantice olmadan bir alana ulaşmak isterse .../Account/Login?ReturnUrl=%2Home%2About
    //Get Actionu ile sayfayla beraber ReturnUrl'yi de getiriyoruz daha sonra buradan da Post Actionuna göndereceğiz
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group">
        <label>UserName</label>
        @Html.TextBoxFor(i => i.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Parola</label>
        @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        @*PasswordFor dersek eğer yazılan karakterler gözükmüyor*@
    </div>

    <button class="btn btn-primary" type="submit">Giriş Yap</button>
    <a href="/Account/Register" class="btn btn-success"> Kayıt Ol</a>

}

